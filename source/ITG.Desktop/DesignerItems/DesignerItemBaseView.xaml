<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:di="clr-namespace:ITG.Desktop.DesignerItems">
    
    <!-- DesignerItemBase object -->
    <DataTemplate DataType="{x:Type di:DesignerItemBaseVM}">
        <Grid IsHitTestVisible="False">

            <Button HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Margin="5"
                    Template="{StaticResource InfoButtonTemplate}"
                    Command="{Binding ShowDataChangeWindowCommand}" />
        </Grid>
    </DataTemplate>
    
</ResourceDictionary>